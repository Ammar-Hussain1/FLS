<Window x:Class="FLS.AddCourseDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add New Course"
        Height="600"
        Width="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#FFEDDF">

    <Window.Resources>
        <SolidColorBrush x:Key="Primary" Color="#2B2D42"/>
        <SolidColorBrush x:Key="Accent" Color="#4281A4"/>
    </Window.Resources>

    <Border Padding="30" Background="White" Margin="20" CornerRadius="12">
        <StackPanel>
            <TextBlock Text="Add New Course"
                      FontSize="24"
                      FontWeight="Bold"
                      Foreground="{StaticResource Primary}"
                      Margin="0,0,0,20"/>

            <TextBlock Text="Course Code" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,5"/>
            <TextBox Name="CourseCodeTextBox" FontSize="14" Padding="10" Margin="0,0,0,15"/>

            <TextBlock Text="Course Name" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,5"/>
            <TextBox Name="CourseNameTextBox" FontSize="14" Padding="10" Margin="0,0,0,15"/>

            <TextBlock Text="Credit Hours" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,5"/>
            <TextBox Name="CreditHoursTextBox" FontSize="14" Padding="10" Margin="0,0,0,15"/>

            <TextBlock Text="Instructor" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,5"/>
            <TextBox Name="InstructorTextBox" FontSize="14" Padding="10" Margin="0,0,0,25"/>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="1" Content="Cancel" Width="100" Height="40" Margin="0,0,10,0" Click="CancelButton_Click"/>
                <Button Grid.Column="2" Content="Add Course" Width="120" Height="40" Background="{StaticResource Accent}" Foreground="White" Click="AddButton_Click"/>
            </Grid>
        </StackPanel>
    </Border>
</Window>
