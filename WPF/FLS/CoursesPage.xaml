<Window x:Class="FLS.CoursesPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="My Courses - FAST Learning System"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        MinWidth="900"
        MinHeight="700"
        Background="#2B2D42">

    <Window.Resources>
        <SolidColorBrush x:Key="Primary" Color="#2B2D42"/>
        <SolidColorBrush x:Key="Surface" Color="#FFEDDF"/>
        <SolidColorBrush x:Key="Accent" Color="#4281A4"/>
        <SolidColorBrush x:Key="Success" Color="#48A9A6"/>
        <SolidColorBrush x:Key="Danger" Color="#E63946"/>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" 
                Background="{StaticResource Accent}" 
                Padding="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="My Courses" 
                           FontSize="36" 
                           FontWeight="Bold" 
                           Foreground="{StaticResource Surface}"
                           VerticalAlignment="Center"/>
                <Button Name="AddCourseButton"
                        Grid.Column="1"
                        Content="+ Add Course"
                        FontSize="18"
                        FontWeight="SemiBold"
                        Background="{StaticResource Success}"
                        Foreground="{StaticResource Surface}"
                        Padding="20,10"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="AddCourseButton_Click"/>
            </Grid>
        </Border>

        <!-- Main Content -->
        <ScrollViewer Grid.Row="1" 
                      VerticalScrollBarVisibility="Auto"
                      Padding="30">
            <StackPanel>
                <!-- Add Course Form (Collapsible) -->
                <Border Name="AddCourseForm"
                        Background="{StaticResource Surface}"
                        CornerRadius="15"
                        Padding="30"
                        Margin="0,0,0,30"
                        Visibility="Collapsed">
                    <StackPanel>
                        <TextBlock Text="Add New Course"
                                   FontSize="28"
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource Primary}"
                                   Margin="0,0,0,20"/>

                        <TextBlock Text="Course Name"
                                   Foreground="{StaticResource Primary}"
                                   FontSize="18"
                                   Margin="0,0,0,8"/>
                        <TextBox Name="CourseNameTextBox"
                                 FontSize="18"
                                 Background="White"
                                 BorderBrush="{StaticResource Accent}"
                                 BorderThickness="2"
                                 Padding="12"
                                 Margin="0,0,0,16"/>

                        <TextBlock Text="Course Code"
                                   Foreground="{StaticResource Primary}"
                                   FontSize="18"
                                   Margin="0,0,0,8"/>
                        <TextBox Name="CourseCodeTextBox"
                                 FontSize="18"
                                 Background="White"
                                 BorderBrush="{StaticResource Accent}"
                                 BorderThickness="2"
                                 Padding="12"
                                 Margin="0,0,0,16"/>

                        <TextBlock Text="Description"
                                   Foreground="{StaticResource Primary}"
                                   FontSize="18"
                                   Margin="0,0,0,8"/>
                        <TextBox Name="CourseDescriptionTextBox"
                                 FontSize="18"
                                 Background="White"
                                 BorderBrush="{StaticResource Accent}"
                                 BorderThickness="2"
                                 Padding="12"
                                 MinHeight="80"
                                 TextWrapping="Wrap"
                                 AcceptsReturn="True"
                                 VerticalScrollBarVisibility="Auto"
                                 Margin="0,0,0,16"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Credits"
                                           Foreground="{StaticResource Primary}"
                                           FontSize="18"
                                           Margin="0,0,0,8"/>
                                <TextBox Name="CourseCreditsTextBox"
                                         FontSize="18"
                                         Background="White"
                                         BorderBrush="{StaticResource Accent}"
                                         BorderThickness="2"
                                         Padding="12"/>
                            </StackPanel>
                        </Grid>

                        <StackPanel Orientation="Horizontal" 
                                    HorizontalAlignment="Right"
                                    Margin="0,20,0,0">
                            <Button Content="Cancel"
                                    Name="CancelButton"
                                    FontSize="16"
                                    FontWeight="SemiBold"
                                    Background="Transparent"
                                    Foreground="{StaticResource Primary}"
                                    BorderBrush="{StaticResource Accent}"
                                    BorderThickness="2"
                                    Padding="20,10"
                                    Margin="0,0,10,0"
                                    Cursor="Hand"
                                    Click="CancelButton_Click"/>
                            <Button Content="Save Course"
                                    Name="SaveCourseButton"
                                    FontSize="16"
                                    FontWeight="SemiBold"
                                    Background="{StaticResource Accent}"
                                    Foreground="{StaticResource Surface}"
                                    BorderThickness="0"
                                    Padding="20,10"
                                    Cursor="Hand"
                                    Click="SaveCourseButton_Click"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Courses List -->
                <ItemsControl Name="CoursesItemsControl">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="{StaticResource Surface}"
                                    CornerRadius="12"
                                    Padding="25"
                                    Margin="0,0,0,20"
                                    BorderThickness="0">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <StackPanel Grid.Column="0" Grid.Row="0">
                                        <TextBlock Text="{Binding Name}"
                                                   FontSize="24"
                                                   FontWeight="Bold"
                                                   Foreground="{StaticResource Primary}"
                                                   Margin="0,0,0,5"/>
                                        <TextBlock FontSize="18"
                                                   Foreground="{StaticResource Accent}"
                                                   Margin="0,0,0,10">
                                            <Run Text="Code: " FontWeight="SemiBold"/>
                                            <Run Text="{Binding Code}"/>
                                        </TextBlock>
                                    </StackPanel>

                                    <Button Grid.Column="1" 
                                            Grid.Row="0"
                                            Content="Ã—"
                                            FontSize="24"
                                            FontWeight="Bold"
                                            Background="{StaticResource Danger}"
                                            Foreground="White"
                                            Width="35"
                                            Height="35"
                                            BorderThickness="0"
                                            Cursor="Hand"
                                            Padding="0"
                                            Tag="{Binding Id}"
                                            Click="DeleteCourseButton_Click"/>

                                    <TextBlock Grid.Column="0" 
                                               Grid.Row="1"
                                               Grid.ColumnSpan="2"
                                               Text="{Binding Description}"
                                               FontSize="16"
                                               Foreground="{StaticResource Primary}"
                                               TextWrapping="Wrap"
                                               Margin="0,0,0,10"/>

                                    <StackPanel Grid.Column="0" 
                                                Grid.Row="2"
                                                Grid.ColumnSpan="2"
                                                Orientation="Horizontal">
                                        <TextBlock FontSize="14"
                                                   Foreground="{StaticResource Primary}"
                                                   Margin="0,0,20,0">
                                            <Run Text="Credits: " FontWeight="SemiBold"/>
                                            <Run Text="{Binding Credits}"/>
                                        </TextBlock>
                                        <TextBlock FontSize="14"
                                                   Foreground="{StaticResource Primary}"
                                                   Margin="0,0,20,0">
                                            <Run Text="Credits: " FontWeight="SemiBold"/>
                                            <Run Text="{Binding Credits}"/>
                                        </TextBlock>
                                        <TextBlock FontSize="14"
                                                   Foreground="{StaticResource Primary}">
                                            <Run Text="Added: " FontWeight="SemiBold"/>
                                            <Run Text="{Binding CreatedDate, StringFormat='{}{0:MMM dd, yyyy}'}"/>
                                        </TextBlock>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <!-- Empty State -->
                <TextBlock Name="EmptyStateText"
                           Text="No courses added yet. Click 'Add Course' to get started!"
                           FontSize="20"
                           Foreground="{StaticResource Surface}"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Margin="0,50,0,0"
                           Visibility="Collapsed"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>

