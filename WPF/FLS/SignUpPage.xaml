<Window x:Class="FLS.SignUpPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="FAST Learning System"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        MinWidth="650"
        MinHeight="650"
        Background="#2B2D42">

    <Window.Resources>
        <SolidColorBrush x:Key="Primary" Color="#2B2D42"/>
        <SolidColorBrush x:Key="Surface" Color="#FFEDDF"/>
        <SolidColorBrush x:Key="Accent" Color="#4281A4"/>
    </Window.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="0,20,0,20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock Text="FAST Learning System"
                       FontSize="44"
                       FontWeight="Bold"
                       Foreground="{StaticResource Surface}"
                       HorizontalAlignment="Center"
                       Margin="0,30,0,40"/>

            <Border Grid.Row="1"
                    Background="{StaticResource Surface}"
                    CornerRadius="28"
                    Padding="60"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    MinWidth="650"
                    MaxWidth="1200">

                <StackPanel>
                <TextBlock Text="Create Account"
                           FontSize="34"
                           FontWeight="SemiBold"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,34"/>

                <TextBlock Text="Username"
                           Foreground="{StaticResource Primary}"
                           FontSize="20"
                           Margin="0,0,0,8"/>
                <TextBox FontSize="20"
                         Background="{StaticResource Surface}"
                         BorderBrush="{StaticResource Accent}"
                         BorderThickness="2"
                         Padding="14"
                         Margin="0,0,0,26"/>

                <TextBlock Text="Email"
                           Foreground="{StaticResource Primary}"
                           FontSize="20"
                           Margin="0,0,0,8"/>
                <TextBox FontSize="20"
                         Background="{StaticResource Surface}"
                         BorderBrush="{StaticResource Accent}"
                         BorderThickness="2"
                         Padding="14"
                         Margin="0,0,0,26"/>

                <TextBlock Text="Password"
                           Foreground="{StaticResource Primary}"
                           FontSize="20"
                           Margin="0,0,0,8"/>
                <PasswordBox FontSize="20"
                             Background="{StaticResource Surface}"
                             BorderBrush="{StaticResource Accent}"
                             BorderThickness="2"
                             Padding="14"
                             Margin="0,0,0,26"/>

                <TextBlock Text="Confirm Password"
                           Foreground="{StaticResource Primary}"
                           FontSize="20"
                           Margin="0,0,0,8"/>
                <PasswordBox FontSize="20"
                             Background="{StaticResource Surface}"
                             BorderBrush="{StaticResource Accent}"
                             BorderThickness="2"
                             Padding="14"
                             Margin="0,0,0,26"/>

                <TextBlock Text="Degree Program"
                           Foreground="{StaticResource Primary}"
                           FontSize="20"
                           Margin="0,0,0,8"/>
                <ComboBox FontSize="18"
                          Background="{StaticResource Surface}"
                          BorderBrush="{StaticResource Accent}"
                          BorderThickness="2"
                          Padding="10"
                          Margin="0,0,0,32">
                    <ComboBoxItem Content="BS Computer Science"/>
                    <ComboBoxItem Content="BS Software Engineering"/>
                    <ComboBoxItem Content="BS Data Science"/>
                    <ComboBoxItem Content="MBA"/>
                    <ComboBoxItem Content="Other"/>
                </ComboBox>

                <StackPanel Orientation="Horizontal"
                            Margin="0,0,0,18"
                            VerticalAlignment="Center">
                    <CheckBox Margin="0,0,12,0"/>
                    <TextBlock Text="I agree to the terms and privacy policy."
                               Foreground="{StaticResource Primary}"
                               FontSize="16"
                               VerticalAlignment="Center"/>
                </StackPanel>

                <Button Content="Create Account"
                        Name="CreateAccountButton"
                        FontSize="20"
                        FontWeight="SemiBold"
                        Background="{StaticResource Accent}"
                        Foreground="{StaticResource Surface}"
                        Padding="10"
                        Height="55"
                        BorderBrush="{StaticResource Accent}"
                        BorderThickness="2"
                        HorizontalAlignment="Stretch"
                        Margin="0,0,0,18" Click="CreateAccountButton_Click"/>

                <Button Content="Already have an account? Sign in"
                        Name="AlreadyAccountButton"
                        FontSize="20"
                        FontWeight="SemiBold"
                        Background="Transparent"
                        Foreground="{StaticResource Primary}"
                        BorderBrush="{StaticResource Accent}"
                        BorderThickness="2"
                        Padding="10"
                        Height="55"
                        HorizontalAlignment="Stretch" Click="AlreadyAccountButton_Click"/>
            </StackPanel>
        </Border>
    </Grid>
    </ScrollViewer>
</Window>
