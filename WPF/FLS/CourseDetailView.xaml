<UserControl x:Class="FLS.CourseDetailView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:models="clr-namespace:FLS.Models"
             mc:Ignorable="d"
             d:DesignHeight="800" d:DesignWidth="1000">
    <UserControl.Resources>
        <SolidColorBrush x:Key="Primary" Color="#2B2D42"/>
        <SolidColorBrush x:Key="Surface" Color="#FFEDDF"/>
        <SolidColorBrush x:Key="Accent" Color="#4281A4"/>
        <SolidColorBrush x:Key="Success" Color="#48A9A6"/>
        
        <!-- Folder Button Style -->
        <Style x:Key="FolderButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="{StaticResource Accent}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Width" Value="160"/>
            <Setter Property="Height" Value="140"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="12">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#F0F8FF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid Background="{StaticResource Surface}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="{StaticResource Accent}" Padding="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Button Name="BackButton"
                        Content="â† Back"
                        FontSize="16"
                        FontWeight="SemiBold"
                        Background="Transparent"
                        Foreground="{StaticResource Surface}"
                        BorderBrush="{StaticResource Surface}"
                        BorderThickness="2"
                        Padding="15,8"
                        Cursor="Hand"
                        Click="BackButton_Click"
                        Margin="0,0,20,0"/>
                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock Name="CourseNameText"
                               FontSize="28" 
                               FontWeight="Bold" 
                               Foreground="{StaticResource Surface}"/>
                    <TextBlock Name="CourseCodeText"
                               FontSize="18" 
                               Foreground="{StaticResource Surface}"
                               Margin="0,5,0,0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content Area -->
        <Grid Grid.Row="1" Margin="30">
            
            <!-- Folders Grid (Visible by default) -->
            <Grid x:Name="FoldersGrid" Visibility="Visible">
                <!-- Folders -->
                <WrapPanel HorizontalAlignment="Center">
                    <!-- Quizzes -->
                    <Button Style="{StaticResource FolderButtonStyle}" Click="Folder_Click" Tag="Quizzes">
                        <StackPanel HorizontalAlignment="Center">
                            <TextBlock Text="ðŸ“" FontSize="32" HorizontalAlignment="Center" Margin="0,0,0,5"/>
                            <TextBlock Text="Quizzes" FontSize="14" FontWeight="Bold" Foreground="{StaticResource Primary}" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <!-- Assignments -->
                    <Button Style="{StaticResource FolderButtonStyle}" Click="Folder_Click" Tag="Assignments">
                        <StackPanel HorizontalAlignment="Center">
                            <TextBlock Text="ðŸ“‹" FontSize="32" HorizontalAlignment="Center" Margin="0,0,0,5"/>
                            <TextBlock Text="Assignments" FontSize="14" FontWeight="Bold" Foreground="{StaticResource Primary}" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <!-- Mid Term 1 -->
                    <Button Style="{StaticResource FolderButtonStyle}" Click="Folder_Click" Tag="Mid1">
                        <StackPanel HorizontalAlignment="Center">
                            <TextBlock Text="ðŸ“Š" FontSize="32" HorizontalAlignment="Center" Margin="0,0,0,5"/>
                            <TextBlock Text="Mid Term 1" FontSize="14" FontWeight="Bold" Foreground="{StaticResource Primary}" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <!-- Mid Term 2 -->
                    <Button Style="{StaticResource FolderButtonStyle}" Click="Folder_Click" Tag="Mid2">
                        <StackPanel HorizontalAlignment="Center">
                            <TextBlock Text="ðŸ“Š" FontSize="32" HorizontalAlignment="Center" Margin="0,0,0,5"/>
                            <TextBlock Text="Mid Term 2" FontSize="14" FontWeight="Bold" Foreground="{StaticResource Primary}" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <!-- Final Exam -->
                    <Button Style="{StaticResource FolderButtonStyle}" Click="Folder_Click" Tag="Final">
                        <StackPanel HorizontalAlignment="Center">
                            <TextBlock Text="ðŸŽ“" FontSize="32" HorizontalAlignment="Center" Margin="0,0,0,5"/>
                            <TextBlock Text="Final Exam" FontSize="14" FontWeight="Bold" Foreground="{StaticResource Primary}" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <!-- Playlists -->
                    <Button Style="{StaticResource FolderButtonStyle}" Click="Folder_Click" Tag="Playlists">
                        <StackPanel HorizontalAlignment="Center">
                            <TextBlock Text="ðŸŽµ" FontSize="32" HorizontalAlignment="Center" Margin="0,0,0,5"/>
                            <TextBlock Text="Playlists" FontSize="14" FontWeight="Bold" Foreground="{StaticResource Primary}" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </WrapPanel>
            </Grid>

            <!-- Items Grid (Hidden by default) -->
            <Grid x:Name="ItemsGrid" Visibility="Collapsed">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Category Header -->
                <Grid Grid.Row="0" Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Button Content="ðŸ“ Back to Folders"
                            Click="BackToFolders_Click"
                            Background="Transparent"
                            BorderThickness="0"
                            Foreground="{StaticResource Accent}"
                            FontSize="16"
                            FontWeight="SemiBold"
                            Cursor="Hand"/>
                    <TextBlock x:Name="CategoryTitleText"
                               Grid.Column="1"
                               Text="Category Name"
                               FontSize="24"
                               FontWeight="Bold"
                               Foreground="{StaticResource Primary}"
                               HorizontalAlignment="Center"/>
                </Grid>

                <!-- Items List -->
                <ScrollViewer Grid.Row="1">
                    <ItemsControl x:Name="CategoryItemsControl">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <ContentControl Content="{Binding}">
                                    <ContentControl.Resources>
                                        <!-- Template for CourseMaterial -->
                                        <DataTemplate DataType="{x:Type models:CourseMaterial}">
                                            <Border Background="White" CornerRadius="10" Padding="20" Margin="0,0,0,15" BorderBrush="{StaticResource Accent}" BorderThickness="1">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>
                                                    <StackPanel Grid.Column="0">
                                                        <TextBlock Text="{Binding Title}" FontSize="18" FontWeight="Bold" Foreground="{StaticResource Primary}" Margin="0,0,0,5"/>
                                                        <TextBlock FontSize="14" Foreground="{StaticResource Accent}">
                                                            <Run Text="Semester: " FontWeight="SemiBold"/>
                                                            <Run Text="{Binding Semester}"/>
                                                        </TextBlock>
                                                    </StackPanel>
                                                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                                                        <Button Content="ðŸ“„ Preview" FontSize="14" Background="{StaticResource Accent}" Foreground="{StaticResource Surface}" Padding="15,8" BorderThickness="0" Cursor="Hand" Margin="0,0,10,0" Tag="{Binding PreviewLink}" Click="PreviewButton_Click"/>
                                                        <Button Content="â¬‡ Download" FontSize="14" Background="{StaticResource Success}" Foreground="White" Padding="15,8" BorderThickness="0" Cursor="Hand" Tag="{Binding DownloadLink}" Click="DownloadButton_Click"/>
                                                    </StackPanel>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>

                                        <!-- Template for Playlist -->
                                        <DataTemplate DataType="{x:Type models:Playlist}">
                                            <Border Background="White" CornerRadius="10" Padding="20" Margin="0,0,0,15" BorderBrush="{StaticResource Accent}" BorderThickness="1">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="160"/>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>
                                                    
                                                    <!-- Thumbnail -->
                                                    <Border Grid.Column="0" CornerRadius="8" Margin="0,0,20,0" Background="#EEE" Height="90" Width="160">
                                                        <Image Source="{Binding ThumbnailUrl}" Stretch="UniformToFill"/>
                                                    </Border>
                                                    
                                                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                        <TextBlock Text="{Binding Title}" FontSize="18" FontWeight="Bold" Foreground="{StaticResource Primary}" Margin="0,0,0,5"/>
                                                        <TextBlock Text="{Binding Description}" FontSize="14" Foreground="{StaticResource Primary}" TextWrapping="Wrap"/>
                                                    </StackPanel>
                                                    
                                                    <Button Grid.Column="2" Content="â–¶ Open Playlist" FontSize="14" Background="{StaticResource Accent}" Foreground="{StaticResource Surface}" Padding="15,8" BorderThickness="0" Cursor="Hand" VerticalAlignment="Center" Tag="{Binding Link}" Click="OpenPlaylistButton_Click"/>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ContentControl.Resources>
                                </ContentControl>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
