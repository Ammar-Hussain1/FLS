<UserControl x:Class="FLS.ChatView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#FFEDDF">

    <UserControl.Resources>
        <SolidColorBrush x:Key="Primary" Color="#2B2D42"/>
        <SolidColorBrush x:Key="Surface" Color="#FFEDDF"/>
        <SolidColorBrush x:Key="Accent" Color="#4281A4"/>
        <SolidColorBrush x:Key="UserBubble" Color="#4281A4"/>
        <SolidColorBrush x:Key="AIBubble" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="TextDark" Color="#2B2D42"/>
        <SolidColorBrush x:Key="TextLight" Color="#FFFFFF"/>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" 
                Background="{StaticResource Primary}"
                Padding="25,20"
                BorderBrush="{StaticResource Accent}"
                BorderThickness="0,0,0,2">
            <Grid>
                <StackPanel>
                    <TextBlock Text="ðŸ¤– AI Learning Assistant"
                              FontSize="28"
                              FontWeight="Bold"
                              Foreground="{StaticResource Surface}"/>
                    <TextBlock Text="Ask me anything about your courses!"
                              FontSize="14"
                              Foreground="{StaticResource Surface}"
                              Opacity="0.8"
                              Margin="0,5,0,0"/>
                </StackPanel>
                <Button Content="Upload Timetable"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Padding="15,8"
                        Background="{StaticResource Surface}"
                        Foreground="{StaticResource Primary}"
                        FontWeight="SemiBold"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="UploadTimetable_Click">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="8"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </Grid>
        </Border>

        <ScrollViewer Grid.Row="1" 
                     Name="ChatScrollViewer"
                     VerticalScrollBarVisibility="Auto"
                     Padding="20"
                     Background="{StaticResource Surface}">
            <ItemsControl Name="MessagesContainer" 
                         ItemsSource="{Binding}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Grid Margin="0,0,0,15">
                            <Border Background="{StaticResource AIBubble}"
                                   CornerRadius="15,15,15,3"
                                   Padding="15,12"
                                   MaxWidth="600"
                                   HorizontalAlignment="Left"
                                   Visibility="{Binding AIMessageVisibility}">
                                <Border.Effect>
                                    <DropShadowEffect Color="#000000" 
                                                     Opacity="0.1" 
                                                     BlurRadius="10" 
                                                     ShadowDepth="2"/>
                                </Border.Effect>
                                <StackPanel>
                                    <TextBlock Text="ðŸ¤– AI Assistant"
                                             FontSize="11"
                                             FontWeight="SemiBold"
                                             Foreground="{StaticResource Accent}"
                                             Margin="0,0,0,5"/>
                                    <TextBlock Text="{Binding Message}"
                                             FontSize="15"
                                             Foreground="{StaticResource TextDark}"
                                             TextWrapping="Wrap"
                                             LineHeight="22"/>
                                </StackPanel>
                            </Border>

                            <Border Background="{StaticResource UserBubble}"
                                   CornerRadius="15,15,3,15"
                                   Padding="15,12"
                                   MaxWidth="600"
                                   HorizontalAlignment="Right"
                                   Visibility="{Binding UserMessageVisibility}">
                                <Border.Effect>
                                    <DropShadowEffect Color="#000000" 
                                                     Opacity="0.15" 
                                                     BlurRadius="10" 
                                                     ShadowDepth="2"/>
                                </Border.Effect>
                                <StackPanel>
                                    <TextBlock Text="You"
                                             FontSize="11"
                                             FontWeight="SemiBold"
                                             Foreground="{StaticResource TextLight}"
                                             Opacity="0.9"
                                             Margin="0,0,0,5"
                                             HorizontalAlignment="Right"/>
                                    <TextBlock Text="{Binding Message}"
                                             FontSize="15"
                                             Foreground="{StaticResource TextLight}"
                                             TextWrapping="Wrap"
                                             LineHeight="22"/>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <Border Grid.Row="2"
                Background="{StaticResource Primary}"
                Padding="20,15"
                BorderBrush="{StaticResource Accent}"
                BorderThickness="0,2,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0"
                       Background="White"
                       CornerRadius="25"
                       Padding="20,12"
                       Margin="0,0,15,0">
                    <TextBox Name="MessageInput"
                            FontSize="15"
                            BorderThickness="0"
                            Background="Transparent"
                            Foreground="{StaticResource TextDark}"
                            VerticalContentAlignment="Center"
                            TextWrapping="Wrap"
                            MaxHeight="100"
                            KeyDown="MessageInput_KeyDown">
                        <TextBox.Resources>
                            <Style TargetType="{x:Type Border}">
                                <Setter Property="CornerRadius" Value="0"/>
                            </Style>
                        </TextBox.Resources>
                    </TextBox>
                </Border>

                <Button Grid.Column="1"
                       Name="SendButton"
                       Content="Send âž¤"
                       FontSize="16"
                       FontWeight="SemiBold"
                       Background="{StaticResource Accent}"
                       Foreground="White"
                       BorderThickness="0"
                       Padding="30,12"
                       Cursor="Hand"
                       Click="SendButton_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="{StaticResource Accent}"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                               CornerRadius="25"
                                               Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center"
                                                            VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#48A9A6"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter Property="Background" Value="#3A8A87"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
        </Border>
    </Grid>
</UserControl>
