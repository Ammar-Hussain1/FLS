<Window x:Class="FLS.ApiKeyDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Configure API Key"
        Height="420"
        Width="550"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#FFEDDF">

    <Window.Resources>
        <SolidColorBrush x:Key="Primary" Color="#2B2D42"/>
        <SolidColorBrush x:Key="Accent" Color="#4281A4"/>
        <SolidColorBrush x:Key="Surface" Color="#FFEDDF"/>
        <SolidColorBrush x:Key="TextDark" Color="#2B2D42"/>
    </Window.Resources>

    <Border Padding="17" Background="{StaticResource Surface}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Margin="0,0,0,20">
                <StackPanel HorizontalAlignment="Center">
                    <TextBlock Text="ðŸ”‘ API Key Configuration"
                              FontSize="24"
                              FontWeight="Bold"
                              Foreground="{StaticResource Primary}"
                              HorizontalAlignment="Center"/>
                    <TextBlock Text="Configure your Groq API key to use the AI assistant"
                              FontSize="13"
                              Foreground="{StaticResource TextDark}"
                              Opacity="0.7"
                              HorizontalAlignment="Center"
                              Margin="0,5,0,0"/>
                </StackPanel>
            </Grid>

            <StackPanel Grid.Row="1" Margin="0,0,0,15">
                <TextBlock Text="API Key"
                          FontSize="14"
                          FontWeight="SemiBold"
                          Foreground="{StaticResource Primary}"
                          Margin="0,0,0,8"/>
                <Border Background="White"
                       CornerRadius="8"
                       BorderBrush="{StaticResource Accent}"
                       BorderThickness="1"
                       Padding="12,10">
                    <TextBox Name="ApiKeyInput"
                            FontSize="14"
                            BorderThickness="0"
                            Background="Transparent"
                            Foreground="{StaticResource TextDark}"
                            VerticalContentAlignment="Center"/>
                </Border>
            </StackPanel>

            <TextBlock Grid.Row="2"
                      FontSize="12"
                      Foreground="{StaticResource TextDark}"
                      Opacity="0.6"
                      TextWrapping="Wrap"
                      Margin="0,0,0,15">
                <Run Text="Don't have an API key? Get one for free from Groq."/>
                <LineBreak/>
                <Run Text="Groq provides fast, free AI inference."/>
            </TextBlock>

            <Border Grid.Row="3"
                   Background="#E8F4F8"
                   CornerRadius="8"
                   Padding="15,12"
                   Margin="0,1,0,19">
                <StackPanel>
                    <TextBlock FontSize="12"
                              FontWeight="SemiBold"
                              Foreground="{StaticResource Primary}"
                              Margin="0,0,0,5">
                        <Run Text="ðŸ“š Recommended:"/>
                    </TextBlock>
                    <TextBlock>
                        <Hyperlink NavigateUri="https://console.groq.com/keys"
                                  RequestNavigate="Hyperlink_RequestNavigate"
                                  Foreground="{StaticResource Accent}"
                                  TextDecorations="None">
                            <Run Text="Groq API Keys - Get your free API key here" FontSize="13"/>
                        </Hyperlink>
                    </TextBlock>
                </StackPanel>
            </Border>

            <!-- Buttons -->
            <Grid Grid.Row="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="1"
                       Name="CancelButton"
                       Style="{StaticResource SecondaryButtonStyle}"
                       Content="Cancel"
                       FontSize="14"
                       FontWeight="SemiBold"
                       Padding="25,10"
                       Margin="0,0,10,0"
                       Click="CancelButton_Click"/>

                <Button Grid.Column="2"
                       Name="SaveButton"
                       Style="{StaticResource PrimaryButtonStyle}"
                       Content="Save"
                       FontSize="14"
                       FontWeight="SemiBold"
                       Padding="30,10"
                       Click="SaveButton_Click"/>
            </Grid>
        </Grid>
    </Border>
</Window>
