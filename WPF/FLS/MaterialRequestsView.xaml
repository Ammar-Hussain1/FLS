<UserControl x:Class="FLS.MaterialRequestsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#FFEDDF">

    <UserControl.Resources>
        <SolidColorBrush x:Key="Primary" Color="#2B2D42"/>
        <SolidColorBrush x:Key="Success" Color="#48A9A6"/>
        <SolidColorBrush x:Key="Danger" Color="#E63946"/>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" 
                Background="{StaticResource Primary}"
                Padding="30,25">
            <StackPanel>
                <TextBlock Text="ðŸ“„ Course Material Requests"
                          FontSize="32"
                          FontWeight="Bold"
                          Foreground="White"/>
                <TextBlock Text="Review and approve course material submissions"
                          FontSize="14"
                          Foreground="White"
                          Opacity="0.8"
                          Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <ScrollViewer Grid.Row="1" 
                     VerticalScrollBarVisibility="Auto"
                     Padding="30,25">
            <Border Background="White"
                   CornerRadius="12"
                   Padding="25">
                <Border.Effect>
                    <DropShadowEffect Color="#000000" 
                                     Opacity="0.1" 
                                     BlurRadius="15" 
                                     ShadowDepth="3"/>
                </Border.Effect>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0" Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" Text="Course" FontSize="14" FontWeight="Bold" Foreground="{StaticResource Primary}"/>
                        <TextBlock Grid.Column="1" Text="Material Type" FontSize="14" FontWeight="Bold" Foreground="{StaticResource Primary}"/>
                        <TextBlock Grid.Column="2" Text="Submitted By" FontSize="14" FontWeight="Bold" Foreground="{StaticResource Primary}"/>
                        <TextBlock Grid.Column="3" Text="Date" FontSize="14" FontWeight="Bold" Foreground="{StaticResource Primary}"/>
                        <TextBlock Grid.Column="4" Text="Status" FontSize="14" FontWeight="Bold" Foreground="{StaticResource Primary}"/>
                        <TextBlock Grid.Column="5" Text="Actions" FontSize="14" FontWeight="Bold" Foreground="{StaticResource Primary}"/>
                    </Grid>

                    <ItemsControl Grid.Row="1" Name="RequestsListView">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="#E0E0E0" 
                                       BorderThickness="0,1,0,0" 
                                       Padding="0,15">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="150"/>
                                            <ColumnDefinition Width="150"/>
                                            <ColumnDefinition Width="120"/>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Grid.Column="0" 
                                                  Text="{Binding CourseCode}" 
                                                  FontSize="13" 
                                                  FontWeight="SemiBold"
                                                  VerticalAlignment="Center"/>
                                        <TextBlock Grid.Column="1" 
                                                  Text="{Binding MaterialType}" 
                                                  FontSize="13"
                                                  VerticalAlignment="Center"/>
                                        <TextBlock Grid.Column="2" 
                                                  Text="{Binding SubmittedBy}" 
                                                  FontSize="13"
                                                  VerticalAlignment="Center"/>
                                        <TextBlock Grid.Column="3" 
                                                  Text="{Binding SubmissionDate, StringFormat='{}{0:MM/dd/yyyy}'}" 
                                                  FontSize="13"
                                                  VerticalAlignment="Center"/>
                                        <TextBlock Grid.Column="4" 
                                                  Text="{Binding Status}" 
                                                  FontSize="12"
                                                  FontWeight="SemiBold"
                                                  VerticalAlignment="Center"/>

                                        <StackPanel Grid.Column="5" 
                                                   Orientation="Horizontal" 
                                                   HorizontalAlignment="Left">
                                            <Button Content="âœ“ Accept"
                                                   Tag="{Binding Id}"
                                                   FontSize="12"
                                                   Background="{StaticResource Success}"
                                                   Foreground="White"
                                                   BorderThickness="0"
                                                   Padding="12,6"
                                                   Margin="0,0,10,0"
                                                   Cursor="Hand"
                                                   Click="AcceptButton_Click">
                                                <Button.Style>
                                                    <Style TargetType="Button">
                                                        <Setter Property="Template">
                                                            <Setter.Value>
                                                                <ControlTemplate TargetType="Button">
                                                                    <Border Background="{TemplateBinding Background}"
                                                                           CornerRadius="6"
                                                                           Padding="{TemplateBinding Padding}">
                                                                        <ContentPresenter/>
                                                                    </Border>
                                                                </ControlTemplate>
                                                            </Setter.Value>
                                                        </Setter>
                                                        <Style.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter Property="Background" Value="#5BC0BE"/>
                                                            </Trigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Button.Style>
                                            </Button>

                                            <Button Content="âœ— Reject"
                                                   Tag="{Binding Id}"
                                                   FontSize="12"
                                                   Background="{StaticResource Danger}"
                                                   Foreground="White"
                                                   BorderThickness="0"
                                                   Padding="12,6"
                                                   Cursor="Hand"
                                                   Click="RejectButton_Click">
                                                <Button.Style>
                                                    <Style TargetType="Button">
                                                        <Setter Property="Template">
                                                            <Setter.Value>
                                                                <ControlTemplate TargetType="Button">
                                                                    <Border Background="{TemplateBinding Background}"
                                                                           CornerRadius="6"
                                                                           Padding="{TemplateBinding Padding}">
                                                                        <ContentPresenter/>
                                                                    </Border>
                                                                </ControlTemplate>
                                                            </Setter.Value>
                                                        </Setter>
                                                        <Style.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter Property="Background" Value="#FF5A5F"/>
                                                            </Trigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Button.Style>
                                            </Button>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Grid>
            </Border>
        </ScrollViewer>
    </Grid>
</UserControl>
