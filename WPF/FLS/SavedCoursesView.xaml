<UserControl x:Class="FLS.SavedCoursesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <UserControl.Resources>
        <SolidColorBrush x:Key="Primary" Color="#2B2D42"/>
        <SolidColorBrush x:Key="Surface" Color="#FFEDDF"/>
        <SolidColorBrush x:Key="Accent" Color="#4281A4"/>
        <SolidColorBrush x:Key="Success" Color="#48A9A6"/>
        <SolidColorBrush x:Key="Danger" Color="#E63946"/>
    </UserControl.Resources>

    <Grid Background="{StaticResource Surface}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" 
                Background="{StaticResource Accent}" 
                Padding="30,20">
            <TextBlock Text="⭐ Saved Courses" 
                       FontSize="32" 
                       FontWeight="Bold" 
                       Foreground="{StaticResource Surface}"
                       VerticalAlignment="Center"/>
        </Border>

        <!-- Main Content -->
        <ScrollViewer Grid.Row="1" 
                      VerticalScrollBarVisibility="Auto"
                      Padding="30">
            <StackPanel>
                <!-- Courses List -->
                <ItemsControl Name="SavedCoursesItemsControl">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="White"
                                    CornerRadius="12"
                                    Padding="25"
                                    Margin="0,0,0,20"
                                    BorderBrush="{StaticResource Accent}"
                                    BorderThickness="1"
                                    Cursor="Hand"
                                    MouseLeftButtonDown="CourseCard_MouseLeftButtonDown"
                                    Tag="{Binding}">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Setter Property="Background" Value="White"/>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#F5F5F5"/>
                                                <Setter Property="BorderBrush" Value="{StaticResource Accent}"/>
                                                <Setter Property="BorderThickness" Value="2"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <StackPanel Grid.Column="0" Grid.Row="0">
                                        <TextBlock Text="{Binding Course.Name}"
                                                   FontSize="24"
                                                   FontWeight="Bold"
                                                   Foreground="{StaticResource Primary}"
                                                   Margin="0,0,0,5"/>
                                        <TextBlock FontSize="18"
                                                   Foreground="{StaticResource Accent}"
                                                   Margin="0,0,0,5">
                                            <Run Text="Code: " FontWeight="SemiBold"/>
                                            <Run Text="{Binding Course.Code}"/>
                                        </TextBlock>
                                        <TextBlock FontSize="16"
                                                   Foreground="{StaticResource Success}"
                                                   FontWeight="SemiBold">
                                            <Run Text="Section: "/>
                                            <Run Text="{Binding Section}"/>
                                        </TextBlock>
                                    </StackPanel>

                                    <Button Grid.Column="1" 
                                            Grid.Row="0"
                                            Content="×"
                                            FontSize="24"
                                            FontWeight="Bold"
                                            Background="{StaticResource Danger}"
                                            Foreground="White"
                                            Width="35"
                                            Height="35"
                                            BorderThickness="0"
                                            Cursor="Hand"
                                            Padding="0"
                                            Tag="{Binding Course.Id}"
                                            Click="RemoveCourseButton_Click"
                                            ToolTip="Remove from Saved"/>

                                    <TextBlock Grid.Column="0" 
                                               Grid.Row="1"
                                               Grid.ColumnSpan="2"
                                               Text="{Binding Course.Description}"
                                               FontSize="16"
                                               Foreground="{StaticResource Primary}"
                                               TextWrapping="Wrap"
                                               Margin="0,0,0,10"/>

                                    <StackPanel Grid.Column="0" 
                                                Grid.Row="2"
                                                Grid.ColumnSpan="2"
                                                Orientation="Horizontal">
                                        <TextBlock FontSize="14"
                                                   Foreground="{StaticResource Primary}"
                                                   Margin="0,0,20,0">
                                            <Run Text="Credits: " FontWeight="SemiBold"/>
                                            <Run Text="{Binding Course.Credits}"/>
                                        </TextBlock>
                                        <TextBlock FontSize="14"
                                                   Foreground="{StaticResource Primary}">
                                            <Run Text="Enrolled: " FontWeight="SemiBold"/>
                                            <Run Text="{Binding EnrolledDate, StringFormat='{}{0:MMM dd, yyyy}'}"/>
                                        </TextBlock>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <!-- Empty State -->
                <TextBlock Name="EmptyStateText"
                           Text="No saved courses yet. Go to 'All Courses' and click the ⭐ button to save courses!"
                           FontSize="18"
                           Foreground="{StaticResource Primary}"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Margin="0,50,0,0"
                           TextWrapping="Wrap"
                           Visibility="Collapsed"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>

