<UserControl x:Class="FLS.CourseMaterialSubmissionView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf">

    <UserControl.Resources>
        <SolidColorBrush x:Key="Primary" Color="#2B2D42"/>
        <SolidColorBrush x:Key="Surface" Color="#FFEDDF"/>
        <SolidColorBrush x:Key="Accent" Color="#4281A4"/>
        <SolidColorBrush x:Key="Success" Color="#48A9A6"/>
        <SolidColorBrush x:Key="Danger" Color="#E63946"/>
    </UserControl.Resources>

    <Grid Background="{StaticResource Surface}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" 
                Background="{StaticResource Accent}" 
                Padding="30,20">
            <TextBlock Text="ðŸ“„ Submit Course Material" 
                       FontSize="32" 
                       FontWeight="Bold" 
                       Foreground="{StaticResource Surface}"
                       VerticalAlignment="Center"/>
        </Border>

        <!-- Main Content -->
        <ScrollViewer Grid.Row="1" 
                      VerticalScrollBarVisibility="Auto"
                      Padding="15">
            <Grid Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="350"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Left Panel: Form -->
                <Border Grid.Column="0"
                        Background="White"
                        CornerRadius="12"
                        Padding="25"
                        Margin="0,0,15,0"
                        BorderBrush="{StaticResource Accent}"
                        BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="Material Submission Form"
                                   FontSize="20"
                                   FontWeight="Bold"
                                   Foreground="{StaticResource Primary}"
                                   Margin="0,0,0,20"/>

                        <!-- Course Selection -->
                        <TextBlock Text="Select Course:"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource Primary}"
                                   Margin="0,0,0,5"/>
                        <ComboBox Name="CourseComboBox"
          FontSize="14"
          Padding="10,8"
          Margin="0,0,0,15"
          IsEditable="True"
          IsTextSearchEnabled="False"
          StaysOpenOnEdit="True"
          TextBoxBase.TextChanged="CourseComboBox_TextChanged"
          SelectionChanged="CourseComboBox_SelectionChanged">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel>
                                        <TextBlock Text="{Binding Name}" 
                                                   FontWeight="SemiBold"
                                                   FontSize="14"/>
                                        <TextBlock Text="{Binding Code}" 
                                                   FontSize="12"
                                                   Foreground="{StaticResource Accent}"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>

                        <!-- Material Type Selection -->
                        <TextBlock Text="Material Type:"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource Primary}"
                                   Margin="0,0,0,5"/>
                        <ComboBox Name="MaterialTypeComboBox"
                                  FontSize="14"
                                  Padding="10,8"
                                  Margin="0,0,0,15"
                                  SelectionChanged="MaterialTypeComboBox_SelectionChanged">
                            <ComboBoxItem Content="Quiz"/>
                            <ComboBoxItem Content="Assignment"/>
                            <ComboBoxItem Content="Mid1"/>
                            <ComboBoxItem Content="Mid2"/>
                            <ComboBoxItem Content="Final"/>
                        </ComboBox>

                        <!-- Year Input -->
                        <TextBlock Text="Academic Year:"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource Primary}"
                                   Margin="0,0,0,5"/>
                        <TextBox Name="SemesterTextBox"
                                 FontSize="14"
                                 Padding="10,8"
                                 BorderBrush="{StaticResource Accent}"
                                 BorderThickness="2"
                                 Margin="0,0,0,15"
                                 TextChanged="SemesterTextBox_TextChanged"
                                 ToolTip="Enter year (e.g., 2025) or semester with year (e.g., Spring 2025, Fall 2023). Only the year will be saved."/>

                        <!-- File Selection -->
                        <TextBlock Text="PDF File:"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource Primary}"
                                   Margin="0,0,0,5"/>
                        <Grid Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox Name="FilePathTextBox"
                                     Grid.Column="0"
                                     FontSize="14"
                                     Padding="10,8"
                                     BorderBrush="{StaticResource Accent}"
                                     BorderThickness="2"
                                     IsReadOnly="True"
                                     VerticalContentAlignment="Center"
                                     Margin="0,0,10,0"/>
                            <Button Name="BrowseFileButton"
                                    Grid.Column="1"
                                    Content="Browse"
                                    FontSize="14"
                                    FontWeight="SemiBold"
                                    Background="{StaticResource Accent}"
                                    Foreground="{StaticResource Surface}"
                                    Padding="20,8"
                                    Cursor="Hand"
                                    Click="BrowseFileButton_Click"/>
                        </Grid>

                        <!-- File Information -->
                        <Border Name="FileInfoPanel"
                                Background="#F0F8FF"
                                BorderBrush="{StaticResource Accent}"
                                BorderThickness="1"
                                CornerRadius="8"
                                Padding="15"
                                Margin="0,0,0,15"
                                Visibility="Collapsed">
                            <StackPanel>
                                <TextBlock Name="FileNameText"
                                           FontSize="14"
                                           FontWeight="SemiBold"
                                           Foreground="{StaticResource Primary}"
                                           Margin="0,0,0,5"/>
                                <TextBlock Name="FileSizeText"
                                           FontSize="12"
                                           Foreground="{StaticResource Accent}"/>
                            </StackPanel>
                        </Border>

                        <!-- Submit Button -->
                        <Button Name="SubmitButton"
                                Content="Submit for Approval"
                                FontSize="16"
                                FontWeight="Bold"
                                Background="{StaticResource Success}"
                                Foreground="White"
                                Padding="20,12"
                                Cursor="Hand"
                                Click="SubmitButton_Click"
                                IsEnabled="False">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="{StaticResource Success}"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsEnabled" Value="False">
                                            <Setter Property="Background" Value="#CCCCCC"/>
                                            <Setter Property="Foreground" Value="#666666"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>

                        <!-- Status Message -->
                        <TextBlock Name="StatusTextBlock"
                                   FontSize="14"
                                   Foreground="{StaticResource Success}"
                                   Margin="0,15,0,0"
                                   TextWrapping="Wrap"
                                   Visibility="Collapsed"/>
                    </StackPanel>
                </Border>

                <!-- Right Panel: File Preview Info -->
                <Border Grid.Column="1"
                        Background="White"
                        CornerRadius="12"
                        Padding="25"
                        BorderBrush="{StaticResource Accent}"
                        BorderThickness="1">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0"
                                   Text="File Preview"
                                   FontSize="20"
                                   FontWeight="Bold"
                                   Foreground="{StaticResource Primary}"
                                   Margin="0,0,0,15"/>

                        <!-- File Information Area -->
                        <Border Grid.Row="1"
                                Background="#F5F5F5"
                                BorderBrush="{StaticResource Accent}"
                                BorderThickness="2"
                                CornerRadius="8">
                            <Grid>
                                <!-- WebView2 Control -->
                                <wv2:WebView2 Name="PdfWebView" 
                                              Visibility="Collapsed"/>

                                <!-- Placeholder when no file selected -->
                                <StackPanel Name="NoPreviewPanel"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center">
                                    <TextBlock Text="ðŸ“„"
                                               FontSize="64"
                                               HorizontalAlignment="Center"
                                               Margin="0,0,0,10"/>
                                    <TextBlock Text="No PDF selected"
                                               FontSize="18"
                                               Foreground="{StaticResource Primary}"
                                               HorizontalAlignment="Center"
                                               Margin="0,0,0,5"/>
                                    <TextBlock Text="Select a PDF file to preview information"
                                               FontSize="14"
                                               Foreground="{StaticResource Accent}"
                                               HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </Grid>
                </Border>
            </Grid>
        </ScrollViewer>
    </Grid>
</UserControl>