<Window x:Class="FLS.LoginPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="FAST Learning System"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        MinWidth="650"
        MinHeight="650"
        Background="#2B2D42">

    <Window.Resources>
        <SolidColorBrush x:Key="Primary" Color="#2B2D42"/>
        <SolidColorBrush x:Key="Surface" Color="#FFEDDF"/>
        <SolidColorBrush x:Key="Accent" Color="#4281A4"/>
    </Window.Resources>


    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Page Title -->
        <TextBlock Text="FAST Learning System"
                   FontSize="44"
                   FontWeight="Bold"
                   Foreground="{StaticResource Surface}"
                   HorizontalAlignment="Center"
                   Margin="0,30,0,40"/>

        <!-- Large centered login card -->
        <Border Grid.Row="1"
                Background="{StaticResource Surface}"
                CornerRadius="28"
                Padding="60"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                MinWidth="650"
                MaxWidth="1200">

            <StackPanel>

                <TextBlock Text="Login"
                           FontSize="34"
                           FontWeight="SemiBold"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,34"/>

                <!-- Email -->
                <TextBlock Text="Email"
                           Foreground="{StaticResource Primary}"
                           FontSize="20"
                           Margin="0,0,0,8"
                           Focusable="True"/>
                <TextBox Name="UsernameTextBox"
                         FontSize="20"
                         Background="{StaticResource Surface}"
                         BorderBrush="{StaticResource Accent}"
                         BorderThickness="2"
                         Padding="14"
                         Margin="0,0,0,26"/>

                <!-- Password -->
                <TextBlock Text="Password"
                           Foreground="{StaticResource Primary}"
                           FontSize="20"
                           Margin="0,0,0,8"/>
                <PasswordBox Name="PasswordBox"
                             FontSize="20"
                             Background="{StaticResource Surface}"
                             BorderBrush="{StaticResource Accent}"
                             BorderThickness="2"
                             Padding="14"
                             Margin="0,0,0,32"/>

                <!-- Login button -->
                <Button Content="Login"
                        Name="LoginButton"
                        FontSize="20"
                        FontWeight="SemiBold"
                        Background="{StaticResource Accent}"
                        Foreground="{StaticResource Surface}"
                        Padding="10"
                        Height="55"
                        BorderBrush="{StaticResource Accent}"
                        BorderThickness="2"
                        HorizontalAlignment="Stretch"
                        Margin="0,0,0,18"
                        Click="LoginButton_Click"
                        Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="{StaticResource Accent}"/>
                            <Setter Property="Foreground" Value="{StaticResource Surface}"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                CornerRadius="8"
                                                RenderTransformOrigin="0.5,0.5">
                                            <Border.RenderTransform>
                                                <ScaleTransform x:Name="ScaleTransform" ScaleX="1" ScaleY="1"/>
                                            </Border.RenderTransform>
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Trigger.EnterActions>
                                                    <BeginStoryboard>
                                                        <Storyboard>
                                                            <ColorAnimation Storyboard.TargetProperty="(Button.Background).(SolidColorBrush.Color)"
                                                                          To="#5A9FBF"
                                                                          Duration="0:0:0.2"/>
                                                            <DoubleAnimation Storyboard.TargetName="ScaleTransform"
                                                                           Storyboard.TargetProperty="ScaleX"
                                                                           To="1.02"
                                                                           Duration="0:0:0.2"/>
                                                            <DoubleAnimation Storyboard.TargetName="ScaleTransform"
                                                                           Storyboard.TargetProperty="ScaleY"
                                                                           To="1.02"
                                                                           Duration="0:0:0.2"/>
                                                        </Storyboard>
                                                    </BeginStoryboard>
                                                </Trigger.EnterActions>
                                                <Trigger.ExitActions>
                                                    <BeginStoryboard>
                                                        <Storyboard>
                                                            <ColorAnimation Storyboard.TargetProperty="(Button.Background).(SolidColorBrush.Color)"
                                                                          To="#4281A4"
                                                                          Duration="0:0:0.2"/>
                                                            <DoubleAnimation Storyboard.TargetName="ScaleTransform"
                                                                           Storyboard.TargetProperty="ScaleX"
                                                                           To="1"
                                                                           Duration="0:0:0.2"/>
                                                            <DoubleAnimation Storyboard.TargetName="ScaleTransform"
                                                                           Storyboard.TargetProperty="ScaleY"
                                                                           To="1"
                                                                           Duration="0:0:0.2"/>
                                                        </Storyboard>
                                                    </BeginStoryboard>
                                                </Trigger.ExitActions>
                                            </Trigger>
                                            <Trigger Property="IsPressed" Value="True">
                                                <Trigger.EnterActions>
                                                    <BeginStoryboard>
                                                        <Storyboard>
                                                            <DoubleAnimation Storyboard.TargetName="ScaleTransform"
                                                                           Storyboard.TargetProperty="ScaleX"
                                                                           To="0.98"
                                                                           Duration="0:0:0.1"/>
                                                            <DoubleAnimation Storyboard.TargetName="ScaleTransform"
                                                                           Storyboard.TargetProperty="ScaleY"
                                                                           To="0.98"
                                                                           Duration="0:0:0.1"/>
                                                        </Storyboard>
                                                    </BeginStoryboard>
                                                </Trigger.EnterActions>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>

                <!-- Signup button -->
                <Button Content="Create an Account"
                        Name="SignUpButton"
                        FontSize="20"
                        FontWeight="SemiBold"
                        Background="Transparent"
                        Foreground="{StaticResource Primary}"
                        BorderBrush="{StaticResource Accent}"
                        BorderThickness="2"
                        Padding="14"
                        Height="55"
                        HorizontalAlignment="Stretch"
                        Click="SignUpButton_Click"
                        Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="Foreground" Value="#2B2D42"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                CornerRadius="8"
                                                RenderTransformOrigin="0.5,0.5">
                                            <Border.RenderTransform>
                                                <ScaleTransform x:Name="ScaleTransform" ScaleX="1" ScaleY="1"/>
                                            </Border.RenderTransform>
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Trigger.EnterActions>
                                                    <BeginStoryboard>
                                                        <Storyboard>
                                                            <ColorAnimation Storyboard.TargetProperty="(Button.Background).(SolidColorBrush.Color)"
                                                                          To="#E8F4F8"
                                                                          Duration="0:0:0.2"/>
                                                            <ColorAnimation Storyboard.TargetProperty="(Button.Foreground).(SolidColorBrush.Color)"
                                                                          To="#4281A4"
                                                                          Duration="0:0:0.2"/>
                                                            <DoubleAnimation Storyboard.TargetName="ScaleTransform"
                                                                           Storyboard.TargetProperty="ScaleX"
                                                                           To="1.02"
                                                                           Duration="0:0:0.2"/>
                                                            <DoubleAnimation Storyboard.TargetName="ScaleTransform"
                                                                           Storyboard.TargetProperty="ScaleY"
                                                                           To="1.02"
                                                                           Duration="0:0:0.2"/>
                                                        </Storyboard>
                                                    </BeginStoryboard>
                                                </Trigger.EnterActions>
                                                <Trigger.ExitActions>
                                                    <BeginStoryboard>
                                                        <Storyboard>
                                                            <ColorAnimation Storyboard.TargetProperty="(Button.Background).(SolidColorBrush.Color)"
                                                                          To="Transparent"
                                                                          Duration="0:0:0.2"/>
                                                            <ColorAnimation Storyboard.TargetProperty="(Button.Foreground).(SolidColorBrush.Color)"
                                                                          To="#2B2D42"
                                                                          Duration="0:0:0.2"/>
                                                            <DoubleAnimation Storyboard.TargetName="ScaleTransform"
                                                                           Storyboard.TargetProperty="ScaleX"
                                                                           To="1"
                                                                           Duration="0:0:0.2"/>
                                                            <DoubleAnimation Storyboard.TargetName="ScaleTransform"
                                                                           Storyboard.TargetProperty="ScaleY"
                                                                           To="1"
                                                                           Duration="0:0:0.2"/>
                                                        </Storyboard>
                                                    </BeginStoryboard>
                                                </Trigger.ExitActions>
                                            </Trigger>
                                            <Trigger Property="IsPressed" Value="True">
                                                <Trigger.EnterActions>
                                                    <BeginStoryboard>
                                                        <Storyboard>
                                                            <DoubleAnimation Storyboard.TargetName="ScaleTransform"
                                                                           Storyboard.TargetProperty="ScaleX"
                                                                           To="0.98"
                                                                           Duration="0:0:0.1"/>
                                                            <DoubleAnimation Storyboard.TargetName="ScaleTransform"
                                                                           Storyboard.TargetProperty="ScaleY"
                                                                           To="0.98"
                                                                           Duration="0:0:0.1"/>
                                                        </Storyboard>
                                                    </BeginStoryboard>
                                                </Trigger.EnterActions>
                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </Border>

    </Grid>
</Window>
