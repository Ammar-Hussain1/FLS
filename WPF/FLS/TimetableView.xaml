<UserControl x:Class="FLS.TimetableView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#FFEDDF">

    <UserControl.Resources>
        <SolidColorBrush x:Key="Primary" Color="#2B2D42"/>
        <SolidColorBrush x:Key="Surface" Color="#FFEDDF"/>
        <SolidColorBrush x:Key="Accent" Color="#4281A4"/>
        <SolidColorBrush x:Key="Success" Color="#48A9A6"/>
        <SolidColorBrush x:Key="TextDark" Color="#2B2D42"/>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header Section -->
        <Border Grid.Row="0" 
                Background="{StaticResource Primary}"
                Padding="30,25"
                BorderBrush="{StaticResource Accent}"
                BorderThickness="0,0,0,3">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="ðŸ“… My Timetable"
                              FontSize="32"
                              FontWeight="Bold"
                              Foreground="{StaticResource Surface}"/>
                    <TextBlock Text="Your weekly class schedule based on enrolled sections"
                              FontSize="14"
                              Foreground="{StaticResource Surface}"
                              Opacity="0.8"
                              Margin="0,5,0,0"/>
                </StackPanel>

                <!-- Refresh Button -->
                <Button Grid.Column="1"
                       Name="RefreshButton"
                       Content="ðŸ”„ Refresh"
                       FontSize="16"
                       FontWeight="SemiBold"
                       Background="{StaticResource Success}"
                       Foreground="White"
                       BorderThickness="0"
                       Padding="20,12"
                       Cursor="Hand"
                       VerticalAlignment="Center"
                       Click="RefreshButton_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="{StaticResource Success}"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                               CornerRadius="8"
                                               Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center"
                                                            VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#5BC0BE"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter Property="Background" Value="#3A8A87"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
        </Border>

        <!-- Timetable Content -->
        <ScrollViewer Grid.Row="1" 
                     VerticalScrollBarVisibility="Auto"
                     Padding="30,25">
            <StackPanel>
                <!-- Info Card -->
                <Border Background="White"
                       CornerRadius="12"
                       Padding="20"
                       Margin="0,0,0,20">
                    <Border.Effect>
                        <DropShadowEffect Color="#000000" 
                                         Opacity="0.1" 
                                         BlurRadius="15" 
                                         ShadowDepth="3"/>
                    </Border.Effect>
                    <StackPanel>
                        <TextBlock Text="ðŸ“š Enrolled Sections"
                                  FontSize="18"
                                  FontWeight="SemiBold"
                                  Foreground="{StaticResource Primary}"
                                  Margin="0,0,0,10"/>
                        <TextBlock Name="EnrolledSectionsText"
                                  FontSize="14"
                                  Foreground="{StaticResource TextDark}"
                                  TextWrapping="Wrap"
                                  Opacity="0.8"/>
                    </StackPanel>
                </Border>

                <!-- Weekly Timetable Grid -->
                <Border Background="White"
                       CornerRadius="12"
                       Padding="25">
                    <Border.Effect>
                        <DropShadowEffect Color="#000000" 
                                         Opacity="0.1" 
                                         BlurRadius="15" 
                                         ShadowDepth="3"/>
                    </Border.Effect>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Days Header -->
                        <Grid Grid.Row="0" Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" 
                                      Text="Monday"
                                      FontSize="14"
                                      FontWeight="Bold"
                                      Foreground="{StaticResource Primary}"
                                      HorizontalAlignment="Center"/>
                            <TextBlock Grid.Column="1" 
                                      Text="Tuesday"
                                      FontSize="14"
                                      FontWeight="Bold"
                                      Foreground="{StaticResource Primary}"
                                      HorizontalAlignment="Center"/>
                            <TextBlock Grid.Column="2" 
                                      Text="Wednesday"
                                      FontSize="14"
                                      FontWeight="Bold"
                                      Foreground="{StaticResource Primary}"
                                      HorizontalAlignment="Center"/>
                            <TextBlock Grid.Column="3" 
                                      Text="Thursday"
                                      FontSize="14"
                                      FontWeight="Bold"
                                      Foreground="{StaticResource Primary}"
                                      HorizontalAlignment="Center"/>
                            <TextBlock Grid.Column="4" 
                                      Text="Friday"
                                      FontSize="14"
                                      FontWeight="Bold"
                                      Foreground="{StaticResource Primary}"
                                      HorizontalAlignment="Center"/>
                        </Grid>

                        <!-- Timetable Slots -->
                        <ItemsControl Grid.Row="1" Name="TimetableGrid">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="0,0,0,10">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Monday -->
                                        <ContentControl Grid.Column="0" Content="{Binding Monday}" Margin="5,0"/>
                                        <!-- Tuesday -->
                                        <ContentControl Grid.Column="1" Content="{Binding Tuesday}" Margin="5,0"/>
                                        <!-- Wednesday -->
                                        <ContentControl Grid.Column="2" Content="{Binding Wednesday}" Margin="5,0"/>
                                        <!-- Thursday -->
                                        <ContentControl Grid.Column="3" Content="{Binding Thursday}" Margin="5,0"/>
                                        <!-- Friday -->
                                        <ContentControl Grid.Column="4" Content="{Binding Friday}" Margin="5,0"/>
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Grid>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
