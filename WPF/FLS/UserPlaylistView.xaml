<UserControl x:Class="FLS.UserPlaylistView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:models="clr-namespace:FLS.Models"
             mc:Ignorable="d"
             d:DesignHeight="800" d:DesignWidth="1000">
    <UserControl.Resources>
        <SolidColorBrush x:Key="Primary" Color="#2B2D42"/>
        <SolidColorBrush x:Key="Surface" Color="#FFEDDF"/>
        <SolidColorBrush x:Key="Accent" Color="#4281A4"/>
        <SolidColorBrush x:Key="Success" Color="#48A9A6"/>
        <SolidColorBrush x:Key="Danger" Color="#E63946"/>
    </UserControl.Resources>

    <Grid Background="{StaticResource Surface}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="{StaticResource Accent}" Padding="30,20">
            <TextBlock Text="ðŸŽµ Course Playlists"
                       FontSize="32"
                       FontWeight="Bold"
                       Foreground="{StaticResource Surface}"/>
        </Border>

        <TabControl Grid.Row="1" Margin="20" Background="Transparent" BorderThickness="0">
            <TabControl.Resources>
                <Style TargetType="TabItem">
                    <Setter Property="FontSize" Value="16"/>
                    <Setter Property="FontWeight" Value="SemiBold"/>
                    <Setter Property="Padding" Value="20,10"/>
                    <Setter Property="Background" Value="#4281A4"/>
                    <Setter Property="Foreground" Value="{StaticResource Primary}"/>
                    <Setter Property="BorderBrush" Value="{StaticResource Accent}"/>
                    <Setter Property="BorderThickness" Value="1,1,1,0"/>
                    <Setter Property="Margin" Value="0,0,5,0"/>
                </Style>
            </TabControl.Resources>

            <TabItem Header="Community Playlists">
                <Grid Background="White" Margin="0,-1,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="350"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0" BorderBrush="{StaticResource Accent}" BorderThickness="0,0,2,0" Padding="20">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Text="Select a Course" FontSize="20" FontWeight="Bold" 
                                       Foreground="{StaticResource Primary}" Margin="0,0,0,15"/>

                            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                                <ItemsControl x:Name="CourseListControl">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Button Click="CourseButton_Click" Tag="{Binding Id}" 
                                                    Background="White" BorderBrush="{StaticResource Accent}" 
                                                    BorderThickness="1" Margin="0,0,0,10" Padding="15" 
                                                    HorizontalContentAlignment="Left" Cursor="Hand">
                                                <Button.Style>
                                                    <Style TargetType="Button">
                                                        <Setter Property="Background" Value="White"/>
                                                        <Style.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter Property="Background" Value="#F0F8FF"/>
                                                            </Trigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Button.Style>
                                                <StackPanel>
                                                    <TextBlock Text="{Binding Name}" FontSize="16" FontWeight="Bold" 
                                                               Foreground="{StaticResource Primary}" TextWrapping="Wrap"/>
                                                    <TextBlock Text="{Binding Code}" FontSize="14" 
                                                               Foreground="{StaticResource Accent}" Margin="0,5,0,0"/>
                                                </StackPanel>
                                            </Button>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>

                            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,15,0,0">
                                <Button Name="PrevPageButton" Content="â† Previous" Click="PrevPage_Click" 
                                        Padding="10,5" Margin="0,0,10,0" Background="{StaticResource Accent}" 
                                        Foreground="White" BorderThickness="0" Cursor="Hand"/>
                                <TextBlock Name="PageInfoText" Text="Page 1 of 1" VerticalAlignment="Center" 
                                           FontSize="14" Margin="10,0"/>
                                <Button Name="NextPageButton" Content="Next â†’" Click="NextPage_Click" 
                                        Padding="10,5" Margin="10,0,0,0" Background="{StaticResource Accent}" 
                                        Foreground="White" BorderThickness="0" Cursor="Hand"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <Border Grid.Column="1" Padding="20">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <TextBlock Name="SelectedCourseText" Grid.Row="0" 
                                       Text="Select a course to view community playlists" 
                                       FontSize="20" FontWeight="Bold" Foreground="{StaticResource Primary}" 
                                       Margin="0,0,0,15"/>

                            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                                <ItemsControl x:Name="PlaylistsControl">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Background="White" BorderBrush="{StaticResource Accent}" 
                                                    BorderThickness="1" CornerRadius="8" Padding="20" Margin="0,0,0,15">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>

                                                    <StackPanel Grid.Column="0">
                                                        <TextBlock Text="{Binding Name}" FontSize="18" FontWeight="Bold" 
                                                                   Foreground="{StaticResource Primary}" Margin="0,0,0,8"/>
                                                        <TextBlock FontSize="14" Foreground="{StaticResource Accent}">
                                                            <Run Text="URL: "/>
                                                            <Hyperlink NavigateUri="{Binding Url}" RequestNavigate="Hyperlink_RequestNavigate">
                                                                <Run Text="{Binding Url}"/>
                                                            </Hyperlink>
                                                        </TextBlock>
                                                    </StackPanel>

                                                    <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                                                        <Button Click="LikeButton_Click" Tag="{Binding}" 
                                                                Background="{StaticResource Success}" Foreground="White" 
                                                                BorderThickness="0" Padding="15,8" Cursor="Hand" 
                                                                Margin="0,0,10,0">
                                                            <StackPanel Orientation="Horizontal">
                                                                <TextBlock Text="ðŸ‘" FontSize="16" Margin="0,0,5,0"/>
                                                                <TextBlock Text="Like" FontSize="14"/>
                                                            </StackPanel>
                                                        </Button>
                                                        <Border Background="{StaticResource Accent}" CornerRadius="4" Padding="12,8">
                                                            <TextBlock FontSize="14" FontWeight="Bold" Foreground="White">
                                                                <Run Text="{Binding Likes}"/>
                                                                <Run Text=" likes"/>
                                                            </TextBlock>
                                                        </Border>
                                                    </StackPanel>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>
                        </Grid>
                    </Border>
                </Grid>
            </TabItem>

            <TabItem Header="Playlist Requests">
                <Grid Background="White" Margin="0,-1,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" Padding="20">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Text="My Playlist Requests" FontSize="20" 
                                       FontWeight="Bold" Foreground="{StaticResource Primary}" Margin="0,0,0,15"/>

                            <DataGrid Grid.Row="1" x:Name="RequestsDataGrid" AutoGenerateColumns="False" 
                                      IsReadOnly="True" CanUserAddRows="False" CanUserDeleteRows="False" 
                                      CanUserResizeRows="False" HeadersVisibility="Column" 
                                      GridLinesVisibility="Horizontal" BorderBrush="{StaticResource Accent}" 
                                      BorderThickness="1" RowHeight="40">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*" MinWidth="150"/>
                                    <DataGridTextColumn Header="URL" Binding="{Binding Url}" Width="2*" MinWidth="200"/>
                                    <DataGridTextColumn Header="Course" Binding="{Binding CourseName}" Width="*" MinWidth="150"/>
                                    <DataGridTemplateColumn Header="Status" Width="120">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <Border CornerRadius="4" Padding="8,4" HorizontalAlignment="Center">
                                                    <Border.Style>
                                                        <Style TargetType="Border">
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding Status}" Value="Pending">
                                                                    <Setter Property="Background" Value="#FFA500"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding Status}" Value="Approved">
                                                                    <Setter Property="Background" Value="{StaticResource Success}"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding Status}" Value="Rejected">
                                                                    <Setter Property="Background" Value="{StaticResource Danger}"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Border.Style>
                                                    <TextBlock Text="{Binding Status}" Foreground="White" FontWeight="SemiBold"/>
                                                </Border>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                    <DataGridTextColumn Header="Submitted" Binding="{Binding SubmittedDate, StringFormat='{}{0:MM/dd/yyyy}'}" Width="120"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>
                    </Border>

                    <Border Grid.Row="1" Background="#F5F5F5" BorderBrush="{StaticResource Accent}" 
                            BorderThickness="0,2,0,0" Padding="20">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Text="Submit New Playlist Request" FontSize="18" 
                                       FontWeight="Bold" Foreground="{StaticResource Primary}" Margin="0,0,0,15"/>

                            <Grid Grid.Row="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                    <TextBlock Text="Playlist Name" FontSize="14" FontWeight="SemiBold" 
                                               Foreground="{StaticResource Primary}" Margin="0,0,0,5"/>
                                    <TextBox Name="PlaylistNameInput" Padding="10" FontSize="14" 
                                             BorderBrush="{StaticResource Accent}" BorderThickness="1"/>
                                </StackPanel>

                                <StackPanel Grid.Column="1" Margin="0,0,10,0">
                                    <TextBlock Text="Playlist URL" FontSize="14" FontWeight="SemiBold" 
                                               Foreground="{StaticResource Primary}" Margin="0,0,0,5"/>
                                    <TextBox Name="PlaylistUrlInput" Padding="10" FontSize="14" 
                                             BorderBrush="{StaticResource Accent}" BorderThickness="1"/>
                                </StackPanel>

                                <StackPanel Grid.Column="2" Margin="0,0,10,0">
                                    <TextBlock Text="Course" FontSize="14" FontWeight="SemiBold" 
                                               Foreground="{StaticResource Primary}" Margin="0,0,0,5"/>
                                    <ComboBox Name="CourseComboBox" Padding="10" FontSize="14" 
                                              BorderBrush="{StaticResource Accent}" BorderThickness="1" 
                                              DisplayMemberPath="Name" SelectedValuePath="Id"/>
                                </StackPanel>

                                <Button Grid.Column="3" Content="Send Request" Click="SendRequest_Click" 
                                        Background="{StaticResource Accent}" Foreground="White" 
                                        FontSize="16" FontWeight="SemiBold" Padding="25,10" 
                                        BorderThickness="0" Cursor="Hand" VerticalAlignment="Bottom"/>
                            </Grid>
                        </Grid>
                    </Border>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>
