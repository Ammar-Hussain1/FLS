<Window x:Class="WpfLoginApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login Page" Height="264" Width="423" WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <TextBlock Text="Username:" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,20,0,0"/>
        <TextBox Name="txtUsername" Width="250" Height="25" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="100,20,0,0"/>

        <TextBlock Text="Password:" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,70,0,0"/>
        <PasswordBox Name="txtPassword" Width="250" Height="25" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="100,70,0,0"/>

        <Button Content="Login" Width="100" Height="30" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="100,120,0,0" Click="Login_Click"/>

        <TextBlock Name="lblMessage" Foreground="Red" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="100,170,0,0"/>
    </Grid>
</Window>
