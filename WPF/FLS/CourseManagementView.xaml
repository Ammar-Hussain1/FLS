<UserControl x:Class="FLS.CourseManagementView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#FFEDDF">

    <UserControl.Resources>
        <SolidColorBrush x:Key="Primary" Color="#2B2D42"/>
        <SolidColorBrush x:Key="Accent" Color="#4281A4"/>
        <SolidColorBrush x:Key="Success" Color="#48A9A6"/>
        <SolidColorBrush x:Key="Danger" Color="#E63946"/>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" 
                Background="{StaticResource Primary}"
                Padding="30,25">
            <Grid>
                <StackPanel>
                    <TextBlock Text="ðŸ“š Course Management"
                              FontSize="32"
                              FontWeight="Bold"
                              Foreground="White"/>
                    <TextBlock Text="Add, edit, or remove courses from the system"
                              FontSize="14"
                              Foreground="White"
                              Opacity="0.8"
                              Margin="0,5,0,0"/>
                </StackPanel>

                <Button Name="AddCourseButton"
                       Content="âž• Add New Course"
                       FontSize="16"
                       FontWeight="SemiBold"
                       Background="{StaticResource Success}"
                       Foreground="White"
                       BorderThickness="0"
                       Padding="20,12"
                       Cursor="Hand"
                       HorizontalAlignment="Right"
                       VerticalAlignment="Center"
                       Click="AddCourseButton_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                               CornerRadius="8"
                                               Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center"
                                                            VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#5BC0BE"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
        </Border>

        <!-- Courses List -->
        <ScrollViewer Grid.Row="1" 
                     VerticalScrollBarVisibility="Auto"
                     Padding="30,25">
            <Border Background="White"
                   CornerRadius="12"
                   Padding="25">
                <Border.Effect>
                    <DropShadowEffect Color="#000000" 
                                     Opacity="0.1" 
                                     BlurRadius="15" 
                                     ShadowDepth="3"/>
                </Border.Effect>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Table Header -->
                    <Grid Grid.Row="0" Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="200"/>
                            <ColumnDefinition Width="120"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" Text="Code" FontSize="14" FontWeight="Bold" Foreground="{StaticResource Primary}"/>
                        <TextBlock Grid.Column="1" Text="Course Name" FontSize="14" FontWeight="Bold" Foreground="{StaticResource Primary}"/>
                        <TextBlock Grid.Column="2" Text="Credits" FontSize="14" FontWeight="Bold" Foreground="{StaticResource Primary}"/>
                        <TextBlock Grid.Column="3" Text="Instructor" FontSize="14" FontWeight="Bold" Foreground="{StaticResource Primary}"/>
                        <TextBlock Grid.Column="4" Text="Actions" FontSize="14" FontWeight="Bold" Foreground="{StaticResource Primary}"/>
                    </Grid>

                    <!-- Courses List -->
                    <ItemsControl Grid.Row="1" Name="CoursesListView">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="#E0E0E0" 
                                       BorderThickness="0,1,0,0" 
                                       Padding="0,15">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="120"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="200"/>
                                            <ColumnDefinition Width="120"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Grid.Column="0" 
                                                  Text="{Binding CourseCode}" 
                                                  FontSize="13" 
                                                  FontWeight="SemiBold"
                                                  VerticalAlignment="Center"/>
                                        <TextBlock Grid.Column="1" 
                                                  Text="{Binding CourseName}" 
                                                  FontSize="13"
                                                  VerticalAlignment="Center"/>
                                        <TextBlock Grid.Column="2" 
                                                  Text="{Binding CreditHours}" 
                                                  FontSize="13"
                                                  VerticalAlignment="Center"/>
                                        <TextBlock Grid.Column="3" 
                                                  Text="{Binding Instructor}" 
                                                  FontSize="13"
                                                  VerticalAlignment="Center"/>
                                        <Button Grid.Column="4"
                                               Content="ðŸ—‘ï¸ Remove"
                                               Tag="{Binding CourseId}"
                                               FontSize="12"
                                               Background="{StaticResource Danger}"
                                               Foreground="White"
                                               BorderThickness="0"
                                               Padding="10,6"
                                               Cursor="Hand"
                                               Click="RemoveCourseButton_Click">
                                            <Button.Style>
                                                <Style TargetType="Button">
                                                    <Setter Property="Template">
                                                        <Setter.Value>
                                                            <ControlTemplate TargetType="Button">
                                                                <Border Background="{TemplateBinding Background}"
                                                                       CornerRadius="6"
                                                                       Padding="{TemplateBinding Padding}">
                                                                    <ContentPresenter HorizontalAlignment="Center"
                                                                                    VerticalAlignment="Center"/>
                                                                </Border>
                                                            </ControlTemplate>
                                                        </Setter.Value>
                                                    </Setter>
                                                    <Style.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Background" Value="#FF5A5F"/>
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Button.Style>
                                        </Button>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Grid>
            </Border>
        </ScrollViewer>
    </Grid>
</UserControl>
