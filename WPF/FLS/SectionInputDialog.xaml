<Window x:Class="FLS.SectionInputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Enter Section Number"
        Width="450"
        Height="350"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#FFEDDF">
    <Window.Resources>
        <SolidColorBrush x:Key="Primary" Color="#2B2D42"/>
        <SolidColorBrush x:Key="Surface" Color="#FFEDDF"/>
        <SolidColorBrush x:Key="Accent" Color="#4281A4"/>
        <SolidColorBrush x:Key="Success" Color="#48A9A6"/>
    </Window.Resources>
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <TextBlock Grid.Row="0"
                   Name="CourseNameText"
                   FontSize="18"
                   FontWeight="SemiBold"
                   Foreground="{StaticResource Primary}"
                   Margin="0,0,0,10"
                   TextWrapping="Wrap"/>
        
        <TextBlock Grid.Row="1"
                   Text="Please enter the section number you are enrolled in:"
                   FontSize="14"
                   Foreground="{StaticResource Primary}"
                   Margin="0,0,0,15"/>
        
        <TextBox Grid.Row="2"
                 Name="SectionTextBox"
                 FontSize="16"
                 Height="40"
                 Padding="5"
                 BorderBrush="{StaticResource Accent}"
                 BorderThickness="2"
                 VerticalContentAlignment="Center"
                 KeyDown="SectionTextBox_KeyDown"
                 Margin="0,0,0,20"/>
        
        <StackPanel Grid.Row="3"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right">
            <Button Content="Cancel"
                    FontSize="14"
                    FontWeight="SemiBold"
                    Background="Transparent"
                    Foreground="{StaticResource Primary}"
                    BorderBrush="{StaticResource Accent}"
                    BorderThickness="2"
                    Padding="20,8"
                    Margin="0,0,10,0"
                    Cursor="Hand"
                    Click="CancelButton_Click"/>
            <Button Content="Save"
                    FontSize="14"
                    FontWeight="SemiBold"
                    Background="{StaticResource Accent}"
                    Foreground="{StaticResource Surface}"
                    BorderThickness="0"
                    Padding="20,8"
                    Cursor="Hand"
                    Click="SaveButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
