<Window x:Class="WpfLoginApp.LoginPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="FAST Learning System"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        MinWidth="650"
        MinHeight="650"
        Background="#2B2D42">

    <Window.Resources>
        <SolidColorBrush x:Key="Primary" Color="#2B2D42"/>
        <SolidColorBrush x:Key="Surface" Color="#FFEDDF"/>
        <SolidColorBrush x:Key="Accent" Color="#4281A4"/>
    </Window.Resources>


    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Page Title -->
        <TextBlock Text="FAST Learning System"
                   FontSize="44"
                   FontWeight="Bold"
                   Foreground="{StaticResource Surface}"
                   HorizontalAlignment="Center"
                   Margin="0,30,0,40"/>

        <!-- Large centered login card -->
        <Border Grid.Row="1"
                Background="{StaticResource Surface}"
                CornerRadius="28"
                Padding="60"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                MinWidth="650"
                MaxWidth="1200">

            <StackPanel>

                <TextBlock Text="Login"
                           FontSize="34"
                           FontWeight="SemiBold"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,34"/>

                <!-- Username -->
                <TextBlock Text="Username"
                           Foreground="{StaticResource Primary}"
                           FontSize="20"
                           Margin="0,0,0,8"/>
                <TextBox FontSize="20"
                         Background="{StaticResource Surface}"
                         BorderBrush="{StaticResource Accent}"
                         BorderThickness="2"
                         Padding="14"
                         Margin="0,0,0,26"/>

                <!-- Password -->
                <TextBlock Text="Password"
                           Foreground="{StaticResource Primary}"
                           FontSize="20"
                           Margin="0,0,0,8"/>
                <PasswordBox FontSize="20"
                             Background="{StaticResource Surface}"
                             BorderBrush="{StaticResource Accent}"
                             BorderThickness="2"
                             Padding="14"
                             Margin="0,0,0,32"/>

                <!-- Login button -->
                <Button Content="Login"
                        FontSize="20"
                        FontWeight="SemiBold"
                        Background="{StaticResource Accent}"
                        Foreground="{StaticResource Surface}"
                        Padding="10"
                        Height="55"
                        BorderBrush="{StaticResource Accent}"
                        BorderThickness="2"
                        HorizontalAlignment="Stretch"
                        Margin="0,0,0,18"/>

                <!-- Signup button -->
                <Button Content="Create an Account"
                        FontSize="20"
                        FontWeight="SemiBold"
                        Background="Transparent"
                        Foreground="{StaticResource Primary}"
                        BorderBrush="{StaticResource Accent}"
                        BorderThickness="2"
                        Padding="14"
                        Height="55"
                        HorizontalAlignment="Stretch"/>
            </StackPanel>
        </Border>

    </Grid>
</Window>
